@page "/permissions/overview"
@using Amusoft.PCR.Blazor.Extensions

<Title Headline="Permission overview" WindowTitle="Permission overview"></Title>
<Button ButtonTheme="@Button.ButtonThemeKind.Primary" OnClick="GotoNewPermissions">New Permission</Button>

@code {
	[Inject]
	public NavigationManager NavigationManager { get; set; }

	private void GotoNewPermissions()
	{
		NavigationManager.NavigateTo("permissions/create");
	}
}
