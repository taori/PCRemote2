@page "/functions/audioMenu"
@using Amusoft.PCR.Server.Dependencies
@using Amusoft.PCR.Model.Statics
@using Amusoft.PCR.Grpc.Common
@inject NavigationManager _navigationManager
@inject IUserContextChannel _userContextChannel
@attribute [Authorize(Roles = RoleNames.Audio)]

<Title WindowTitle="Audio options" Headline="Audio options"></Title>

<div class="container">
	<div class="row mb-3 mb-xl-2">
		<Button CssClass="d-inline-block col-xl-4" OnClick="@(() => _userContextChannel.ToggleMute())">Toggle Mute</Button>
	</div>
	<div class="row mb-3 mb-xl-2">
		<Button CssClass="d-inline-block col-xl-4" OnClick="@(() => _navigationManager.NavigateTo("/functions/audioMenu/volumeControl"))">Change volume</Button>
	</div>
</div>