@page "/functions/computer/monitor"
@using Amusoft.PCR.Server.Dependencies
@inject IUserContextChannel _userContextChannel

<Title Headline="Monitor" WindowTitle="Monitor"></Title>

<div class="container">
	<div class="row mb-3 mb-xl-2">
		<Button CssClass="d-inline-block col-xl-4" OnClick="(() => _userContextChannel.MonitorOff())">Monitor Off</Button>
	</div>
	<div class="row mb-3 mb-xl-2">
		<Button CssClass="d-inline-block col-xl-4" OnClick="(() => _userContextChannel.MonitorOn())">Monitor On</Button>
	</div>
</div>