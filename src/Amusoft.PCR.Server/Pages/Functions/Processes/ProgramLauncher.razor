@page "/functions/processMenu/programLauncher"
@using Amusoft.PCR.Server.Dependencies
@inject IInteropService _interopService

<Title WindowTitle="Launch program" Headline="Launch program"></Title>
<div class="container">
	<div class="row mb-3 mb-xl-2">
		<Button CssClass="d-inline-block col-xl-4" OnClick="@(() => _interopService.LaunchProgram("spotify"))">Spotify</Button>
	</div>
	<div class="row mb-3 mb-xl-2">
		<Button CssClass="d-inline-block col-xl-4" OnClick="@(() => _interopService.LaunchProgram("explorer", "https://www.google.com" ))">Browser</Button>
	</div>
</div>