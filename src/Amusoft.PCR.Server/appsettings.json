{
	"DesktopIntegration": {
		"PathCheck": "FileCheckOnly",
		"ExePath": "../win-integration/Amusoft.PCR.Integration.WindowsDesktop.exe"
	},
	"ServerUrlTransmitter": {
		"Port": 55863,
		"BroadcastInterval": "0:0:10"
	},
	"ConnectionStrings": {
		"DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=Amusoft.PCR.Server;Trusted_Connection=True;MultipleActiveResultSets=true"
	},
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft": "Warning",
			"Microsoft.Hosting.Lifetime": "Information",
			"Amusoft": "Trace"
		}
	},
	"AllowedHosts": "*",

	"Kestrel": {
		"Endpoints": {
			"Http": {
				"Url": "http://*:5000"
			},
			"Https": {
				"Url": "https://*:5001",
				"Certificate": {
					"Subject": "localhost",
					"AllowInvalid": true,
					"Store": "My",
					"Location": "LocalMachine"
				}
			}
		}
	}
}
